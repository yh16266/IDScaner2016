<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".client.ui.home.HomeNewActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/home_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/home_card_shape_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                layout="@layout/home_activity_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="400dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical">


                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="来访类型："/>

                    <RadioGroup
                        android:id="@+id/radioGroup_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="个人"
                            android:id="@+id/radio_person"
                            android:checked="true" />

                        <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="团队"
                            android:id="@+id/radio_team" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="来访时间："/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_text_white"
                        tools:text="2016-04-01"
                        android:id="@+id/txv_time" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="来访单位："/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/card_text_white"
                        tools:text="中科院四川分院"
                        android:id="@+id/edt_unit" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="联系方式："/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/card_text_white"
                        tools:text="15828112233"
                        android:id="@+id/edt_contractway" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="车牌号码："/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/card_text_white"
                        tools:text="川A123456"
                        android:id="@+id/edt_carnum" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="被访人："/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/card_text_white"
                        tools:text="实验室张教授"
                        android:id="@+id/edt_visiteto" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="500dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/white"
                    android:id="@+id/img_sign" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp"
                    android:text="请签字登记"
                    android:id="@+id/txv_sign"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    style="@style/card_row">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/card_lable_white"
                        android:text="来访事由："/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/spinner_reson"/>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="4dp"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:background="@drawable/edittext_roundcorner_greylight_shape_xml"
                    android:hint="请输入来访事由"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey_light"
                    android:textSize="16sp"
                    android:lines="3"
                    android:visibility="invisible"
                    android:id="@+id/editText_reson" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="打印"
                        android:id="@+id/btn_print" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="访客离开"
                        android:id="@+id/btn_leve" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="清除"
                        android:id="@+id/btn_clean" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/home_card_shape_xml"
            android:minWidth="970dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备状态："
                    style="@style/card_lable_white" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="获取中..."
                    style="@style/card_text_white"
                    android:id="@+id/txv_statu" />

                <Spinner
                    android:id="@+id/spinnermode"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/spinnertype"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="启动"
                    android:id="@+id/btn_start" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="暂停"
                    android:id="@+id/btn_pause" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="停止"
                    android:id="@+id/btn_stop" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
