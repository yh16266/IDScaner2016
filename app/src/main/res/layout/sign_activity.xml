<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <LinearLayout
        android:id="@+id/imageViewSignature"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dip"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="center" />

    <com.haozi.idscaner2016.client.control.SignatureView
        android:id="@+id/signatureView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dip"
        android:orientation="vertical"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/imageViewSignature"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView
            android:layout_width="120dip"
            android:layout_height="22dip"
            android:layout_marginTop="20dip"
            android:text="笔迹风格：" />
        
        <Spinner
            android:id="@+id/spinner_style"
            android:layout_width="140dip"
            android:layout_height="42dip"
            android:textSize="22sp" />
        
        <TextView
            android:layout_width="120dip"
            android:layout_height="22dip"
            android:layout_marginTop="20dip"
            android:text="笔迹颜色：" />
        
        <Spinner
            android:id="@+id/spinner_color"
            android:layout_width="140dip"
            android:layout_height="42dip"
            android:textSize="22sp" />
        
        <TextView
            android:layout_width="120dip"
            android:layout_height="22dip"
            android:layout_marginTop="20dip"
            android:text="笔迹粗细：" />
        
        <Spinner
            android:id="@+id/spinner_width"
            android:layout_width="140dip"
            android:layout_height="42dip"
            android:textSize="22sp" />
        
        <TextView
            android:layout_width="120dip"
            android:layout_height="22dip"
            android:layout_marginTop="20dip"
            android:text="写字区域背景：" />
        
        <Spinner
            android:id="@+id/spinner_backgroud"
            android:layout_width="140dip"
            android:layout_height="42dip"
            android:textSize="22sp" />"
        
        <Button
	        android:id="@+id/buttonClean_signature"
            android:layout_width="120dip"
            android:layout_height="42dip"
            android:layout_marginTop="150dip"
            android:background="@drawable/btn_blue_bg"
            android:drawablePadding="25dip"
            android:text="清除"
            android:textSize="22sp"
            android:textColor="#ffffff" />
        
        <Button
	        android:id="@+id/buttonSave_signature"
            android:layout_width="120dip"
            android:layout_height="42dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_blue_bg"
            android:drawablePadding="25dip"
            android:text="保存"
            android:textSize="22sp"
            android:textColor="#ffffff" />
        
         <Button
	        android:id="@+id/buttonCancel_signature"
            android:layout_width="120dip"
            android:layout_height="42dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_blue_bg"
            android:drawablePadding="25dip"
            android:text="退出"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
        
    </LinearLayout>

</LinearLayout>
