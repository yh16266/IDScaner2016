<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_55"
        tools:text="四川省川交公路工程咨询有限公司"
        android:id="@+id/txv_unitname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_55"
        tools:text="录入时间：2016-01-01"
        android:id="@+id/txv_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/font_size_55"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue_selector_xml"
        android:text="删除"
        android:id="@+id/txv_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/font_size_55"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue_selector_xml"
        android:text="编辑"
        android:id="@+id/txv_edit" />

</LinearLayout>